		<class>com.fac.entities.Cliente</class>
		<class>com.fac.entities.Detalle</class>
		<class>com.fac.entities.Factura</class>
		<class>com.fac.entities.InformacionCompania</class>
		<class>com.fac.entities.Producto</class>
		<class>com.fac.entities.Usuario</class>
	</persistence-unit>
</persistence>
